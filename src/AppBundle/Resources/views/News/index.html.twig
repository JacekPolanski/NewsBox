{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
	<h1>Informacje dnia</h1>
	<ul>
		{% for news in newsCollection %}
			<li>
				{{ news.time|date('H:i') }}
				<a href="{{ url('news', {'id': news.id}) }}">{{ news.title }}</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}